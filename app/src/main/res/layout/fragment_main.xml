<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="24sp"/>


    </LinearLayout>

    <Button
        android:id="@+id/start_ride_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/start_ride_button"
        android:textSize="14sp"
        app:icon="@drawable/baseline_play_arrow_24"
        app:iconGravity="textStart" />

    <Button
        android:id="@+id/update_ride_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/update_ride_button"
        android:textSize="14sp"
        app:icon="@drawable/baseline_create_24"
        app:iconGravity="textStart"/>

    <Button
        android:id="@+id/find_scooter_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/find_scooter_button"
        android:textSize="14sp"
        app:icon="@drawable/baseline_electric_bike_24"
        app:iconGravity="textStart" />


    <!--
      <Button
        android:id="@+id/login_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/login_button"
        android:textSize="14sp"
        app:icon="@drawable/baseline_login_24"
        app:iconGravity="textStart" />
      -->


    <Button
        android:id="@+id/history_ride_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/history_ride_button"
        android:textSize="14sp"
        app:icon="@drawable/baseline_history_24"
        app:iconGravity="textStart"/>

    <Button
        android:id="@+id/show_rides_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:text="@string/show_rides_button"
        app:icon="@drawable/baseline_format_list_bulleted_24"
        app:iconGravity="textStart"/>


    <!-- List items using MaterialDesign Cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_rides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
</LinearLayout>